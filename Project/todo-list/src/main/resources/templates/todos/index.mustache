{{>layouts/header}}

<!-- css파일 분리 -->
<link rel="stylesheet" type="text/css" href="/css/todos/index.css">


<!-- 카테고리 선택 카드 -->
<div class="card mb-3">
    <div class="card-header">
        카테고리 선택
        <button type="button" class="btn btn-sm btn-outline-primary category-edit-btn"
                data-bs-toggle="modal"
                data-bs-target="#category-edit-modal">
            수정
        </button>
        <button type="button" class="btn btn-sm btn-outline-danger category-delete-btn">
            삭제
        </button>
    </div>
    <div class="card-body">
        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
            <input type="radio" class="btn-check" name="categoryradio" id="categoryradio-all" autocomplete="off" checked>
            <label class="btn btn-outline-primary btn-custom" for="categoryradio-all">전체</label>
            {{#categories}}
                <input type="radio" class="btn-check" name="categoryradio"
                       id="categoryradio-{{name}}" data-id="{{id}}" autocomplete="off">
                <label class="btn btn-outline-primary btn-custom" for="categoryradio-{{name}}">{{name}}</label>
            {{/categories}}
            <!-- categories에 반환된 문자열을 {'{.}'}로 바로 출력가능 -->
            <!-- 카테고리를 엔티티화 시키며 {'{name}'}으로 표현(확인 꼭 하기) -->
        </div>
    </div>
</div>

<!-- 각 상태 섹션을 부분 템플릿으로 포함(구현못함) -->


<!-- 컬렙스를 사용하여 접기기능 구현 -->
<!-- 준비 섹션 -->
<section class="status-sec">
    <h2>
        <a class="text-decoration-none" data-bs-toggle="collapse" href="#collapseReady" role="button" aria-expanded="true" aria-controls="collapseReady">
            준비
        </a>
    </h2>
    <div class="collapse show" id="collapseReady">
        <table class="table fixed-table">
            <thead>
            <tr>
                <th>관리</th>
                <th>카테고리</th>
                <th>작업</th>
                <th>상태변경</th>
            </tr>
            </thead>
            <tbody>
            {{#readyList}}
                <tr>
                    <td>
                        <button type="button" class="btn btn-sm btn-outline-primary task-edit-btn"
                                data-bs-toggle="modal"
                                data-bs-target="#task-edit-modal"
                                data-bs-id="{{id}}"
                                data-bs-category-name="{{category.name}}"
                                data-bs-title="{{title}}"
                                data-bs-status="{{status}}">
                            수정
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-danger task-delete-btn"
                                data-task-id="{{id}}">삭제</button>
                    </td>
                    <td>{{category.name}}</td>
                    <td>{{title}}</td>
                    <td class="status-text" data-status="{{status}}">{{status}}</td>
                    <td>
                        <div class="btn-group" role="group">
                            <button class="btn btn-outline-primary status-btn btn-custom {{#isReady}}active{{/isReady}}" data-id="{{id}}" data-status="준비">준비</button>
                            <button class="btn btn-outline-warning status-btn btn-custom {{#isProceed}}active{{/isProceed}}" data-id="{{id}}" data-status="진행중">진행중</button>
                            <button class="btn btn-outline-danger status-btn btn-custom {{#isStop}}active{{/isStop}}" data-id="{{id}}" data-status="중단됨">중단됨</button>
                            <button class="btn btn-outline-success status-btn btn-custom {{#isCompleted}}active{{/isCompleted}}" data-id="{{id}}" data-status="완료">완료</button>
                        </div>
                    </td>
                </tr>
            {{/readyList}}
            </tbody>
        </table>
    </div>
</section>

